<section id="index_filters">
  <form class="well">
    <%= bootstrap_form_tag(url: admin_digital_objects_path, method: :get) do %>
      <div class="row form-group-sm">
        <div class="col-sm-3">
          <%= label_tag :id_search, 'Identifier' %>
          <%= text_field_tag :id_search, params[:id_search], class: 'form-control' %>
        </div>
        <div class="col-sm-2">
          <%= label_tag :name_search, 'Name' %>
          <%= text_field_tag :name_search, params[:name_search], class: 'form-control'  %>
        </div>
        <div class="col-sm-3">
          <%= label_tag :created_by_search, 'Created By' %>
          <%= select_tag :created_by_search,
                         options_from_collection_for_select(User.find(Repo.distinct.pluck(:created_by_id).compact), :id, :email, selected: params[:created_by_search]),
                         include_blank: 'Any',
                         class: 'form-control' %>
        </div>
        <div class="col-sm-2">
          <%= label_tag :published_filter, 'Published' %>
          <%= select_tag :published_filter, options_for_select([['Yes', 1], ['No', 0]], selected: params[:published_filter]), include_blank: true, class: 'form-control' %>
        </div>
        <div class="col-sm-2">
          <div style="margin-top: 20px;">
            <%= submit_tag 'Filter', class: 'btn btn-primary digital-objects-filter-submit' %>
            <%= link_to 'Clear', admin_digital_objects_path, class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    <% end %>
  </form>
</section>
