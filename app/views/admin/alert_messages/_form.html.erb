<%= bootstrap_form_for [:admin, @alert_message] do |f| %>
  <%= f.check_box :active %>
  <%= f.select :location,
               options_for_select(AlertMessage::LOCATIONS),
               label: 'Location'
  %>
  <%= f.select :level,
               options_for_select(AlertMessage::LEVELS),
               label: 'Level' %>
  <%= f.text_area :message %>
  <%= f.date_select :display_on %>
  <%= f.date_select :display_until %>
  <%= f.submit 'Submit' %>
<% end %>
