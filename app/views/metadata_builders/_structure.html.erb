<%= form_for @object.metadata_builder, :validate => true, :html => { :class => "field-mappings", :method => :post}, :url => "/metadata_builders/#{@object.metadata_builder.id}" do |f| %>
  <% @object.metadata_builder.preserve.each do |file| -%>
    <%= f.label :nested_relationships, "Children:" %>
    <%= f.select :nested_relationships, _prettify(@object.metadata_builder.preserve), {}, { :multiple => true} %>
  <% end -%>
  <%= content_tag(:div, f.submit, :class => "form-bottom") %>
<% end -%>
