<%= form_for @object.metadata_builder, :validate => true, :html => { :class => "field-mappings", :method => :post}, :url => "/metadata_builders/#{@object.metadata_builder.id}" do |f| %>
  <% @object.metadata_builder.preserve.each do |file| -%>
    <%= f.label "field_mappings[#{file}][root_element][mapped_value]", "Root element:" %>
    <%= f.collection_select :nested_relationships, @object.metadata_builder.preserve, "field_mappings[#{file}][root_element][mapped_value]", "field_mappings[#{file}][root_element][mapped_value]", :prompt => "Please select one from this list or enter below", :include_blank => true %>
    <%= content_tag(:div, f.submit, :class => "form-bottom") %>
  <% end -%>
<% end -%>
