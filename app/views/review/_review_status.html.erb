<div class="panel panel-default review-status">
  <div class="panel-heading">
    <h2><%= t('colenda.repos.ingest.review.actions.heading') %></h2>
  </div>
  <div class="panel-body">
    <% if local_assigns.has_key? :stats %>
    <h3><%= t('colenda.repos.ingest.review.status.heading') %></h3>
    <ul class="review-status">
      <% stats.each do |stat| %>
        <li>
          <%= stat %>
        </li>
      <% end %>
    </ul>
    <% end -%>
    <%= render_review_link(repo_id) if local_assigns.has_key? :repo_id %>
  </div>
</div>
