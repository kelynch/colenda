<div class="ingest-select-form">
  <%= form_for @object.metadata_builder, :validate => true, :method => :post, :url => "/metadata_builders/#{@object.metadata_builder.id}/ingest" do |f| %>
    <% @object.metadata_builder.preserve.each do |preserve| %>
    <div class="checkbox">
      <%= check_box_tag "to_ingest[#{prettify(preserve)}]", preserve %>
      <%= label "to_ingest[#{prettify(preserve)}]", prettify(preserve) %>
    </div>
    <% end %>
    <%= f.submit "Mark files for ingest" %>
  <% end -%>
</div>
